<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.MainFragment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <!-- 좌측 가이드라인 -->
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01" />

    <!-- 중간 가이드라인 -->
    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.34" />

    <!--======================== 호출서버 ========================-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:text="호출 서버 : "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginRight="5dp" />
    <RadioGroup
        android:id="@+id/rgSvr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioSvr_TEST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioSvrClicked"
            android:text="테스트서버" />

        <RadioButton
            android:id="@+id/radioSvr_PRD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioSvrClicked"
            android:text="운영서버" />
    </RadioGroup>
    <!--//======================== 호출서버 ========================-->


    <!--======================== App Key ========================-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="App Key : "
        android:id="@+id/textView4"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginRight="5dp" />

    <EditText
        android:id="@+id/etAppKey"
        android:layout_width="245dp"
        android:layout_height="32dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/rgSvr"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />
    <!--//======================== App Key ========================-->


    <!--======================== App Secret ========================-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="end"
        android:text="App Secret : "
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:id="@+id/textView5"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginRight="5dp" />

    <EditText
        android:id="@+id/etAppSecret"
        android:layout_width="245dp"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:layout_weight="7"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toBottomOf="@+id/etAppKey"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />
    <!--//======================== App Secret ========================-->


    <!--======================== Callback URL (via Web) ========================-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="end"
        android:text="Callback URL\n(via Web) : "
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:id="@+id/textView6"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginRight="5dp" />

    <EditText
        android:id="@+id/etWebCallbackUrl"
        android:layout_width="245dp"
        android:layout_height="32dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_weight="7"
        app:layout_constraintTop_toBottomOf="@+id/etAppSecret"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />
    <!--//======================== Callback URL (via Web) ========================-->


    <!--======================== Callback URL (via App) ========================-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="end"
        android:text="Callback URL\n(via App) : "
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:id="@+id/textView7"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginRight="5dp" />

    <EditText
        android:id="@+id/etCallbackUrl"
        android:layout_width="245dp"
        android:layout_height="32dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_weight="7"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/etWebCallbackUrl"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />
    <!--//======================== Callback URL (via App) ========================-->


    <TextView
        android:id="@+id/textView8"
        android:layout_width="314dp"
        android:layout_height="40dp"
        android:text="콜백 주소는 '개발자사이트'➝'마이페이지'➝'내 앱 관리' 에서 설정하신 콜백 주소와 일치하여야 합니다."
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/etCallbackUrl"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent" />


    <!--======================== Scope ========================-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="end"
        android:text="Scope : "
        android:id="@+id/textView9"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        android:layout_marginRight="5dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />
    <Spinner
        android:id="@+id/spScope"
        android:layout_width="177dp"
        android:layout_height="27dp"
        android:layout_weight="7"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginLeft="3dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline2" />
    <!--//======================== Scope ========================-->


    <!--======================== 저장/초기화 버튼 ========================-->
    <Button
        android:id="@+id/btnSaveSettings"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:text="저장"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnResetSettings"
        android:layout_marginTop="89dp"
        app:layout_constraintTop_toBottomOf="@+id/spScope" />

    <Button
        android:id="@+id/btnResetSettings"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="초기화"
        app:layout_constraintLeft_toRightOf="@+id/btnSaveSettings"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSaveSettings"
        android:layout_marginTop="-1dp" />
    <!--//======================== 저장/초기화 버튼 ========================-->


    <!--================== 세션쿠키(웹로그인정보) 제거 버튼 ==================-->
    <Button
        android:layout_width="244dp"
        android:layout_height="48dp"
        android:text="세션쿠키(웹로그인정보) 제거"
        android:id="@+id/btnRemoveSession"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSaveSettings" />

    <!--//================== 세션쿠키(웹로그인정보) 제거 버튼 ==================-->


</android.support.constraint.ConstraintLayout>
