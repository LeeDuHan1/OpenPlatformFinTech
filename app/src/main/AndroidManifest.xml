<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.bfop.kftc.com.useorgsampleapprenewal">

    <application
        android:name="android.bfop.kftc.com.useorgsampleapprenewal.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label= "@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".layout.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- 오픈플랫폼앱에서 이 앱을 호출하기 위한 스키마 정의 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="bfoptest" android:host="result" />
            </intent-filter>
            <!--// 오픈플랫폼앱에서 이 앱을 호출하기 위한 스키마 정의 -->
        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>